{
	"id": "hbxw-translator",
	"name": "translator",
	"description": "翻译助手，写代码起变量就用它",
	"displayName": "翻译助手",
	"version": "1.0.0",
	"publisher": "xiewu",
	"engines": {
		"HBuilderX": "^3.0.0"
	},
	"categories": [
		"Other"
	],
	"main": "./extension",
	"activationEvents": [
		"onView:api.WebViewActivityBar",
		"onView:api.WebViewRightSide"
	],
	"contributes": {
		"configuration": {
			"title": "翻译助手",
			"properties": {
				"translator.torigin": {
					"type": "string",
					"default": "baidu",
					"enum": [
						"baidu",
						"tengxun",
						"aliyun"
					],
					"description": "默认使用的翻译源"
				},
				"translator.bd_appid": {
					"type": "string",
					"default": "",
					"description": "百度翻译appid"
				},
				"translator.secret_key": {
					"type": "string",
					"default": "",
					"description": "百度翻译密钥"
				},
				"translator.tx_appid": {
					"type": "string",
					"default": "",
					"description": "腾讯云翻译SecretId"
				},
				"translator.tx_secret_key": {
					"type": "string",
					"default": "",
					"description": "腾讯云翻译SecretKey"
				},
				"translator.aly_appid": {
					"type": "string",
					"default": "",
					"description": "阿里云配置AccessKey ID"
				},
				"translator.aly_secret_key": {
					"type": "string",
					"default": "",
					"description": "阿里云配置AccessKey Secret"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "WebViewcontainerIdActivityBar",
					"title": "翻译助手（资源管理器）"
				}
			],
			"rightside": [
				{
					"id": "WebViewcontainerIdRightSide",
					"title": "翻译助手（右侧栏）"
				}
			]
		},
		"views": {
			"WebViewcontainerIdActivityBar": [
				{
					"id": "api.WebViewActivityBar",
					"title": "翻译助手,起好变量就用它"
				}
			],
			"WebViewcontainerIdRightSide": [
				{
					"id": "api.WebViewRightSide",
					"title": "翻译助手,起好变量就用它"
				}
			]
		}
	},
	"extensionDependencies": [
		"npm",
		"plugin-manager"
	],
	"dependencies": {
		"@alicloud/pop-core": "^1.7.13",
		"axios": "^0.21.1",
		"chinese-to-pinyin": "^1.3.1",
		"tencentcloud-sdk-nodejs-tmt": "^4.0.810"
	},
	"keywords": [
        "翻译",
        "变量",
        "中英翻译",
        "拼音翻译"
    ],
	"repository": "https://gitee.com/github-9819409/translator",
    "dcloudext": {
        "contact": {
			"qq": "412832768"
		},
		"declaration": {
			"ads": "无",
			"data": "无",
			"permissions": "无"
		},
        "npmurl": "",
        "type": "hbuilderx"
	}
}
